<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle (white with semi-transparent center) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    <!-- Inner circle (transparent) -->
    <item
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp">
        <shape android:shape="oval">
            <solid android:color="@color/black" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>